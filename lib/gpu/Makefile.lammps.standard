gpu_SYSLIB =  -lcudart -lcuda
gpu_SYSPATH = -L$(HOME)/cuda/lib64 -Wl,-rpath,$(HOME)/cuda/lib64:$(HOME)/compile/lammps-icms/lib/gpu

